{% if selected|length > 0 %}
{%- for choice in choices -%}
    {% if choice['slug'] in selected %}
        {%- if choice['slug'] is not same as('_other') -%}
            {{ choice['name']|localize_translatable_string|replace({'"':'""'})|raw }}
        {%- else -%}
            {{ choice['name']|replace({'"':'""'})|raw }}
        {%- endif -%}
    {% endif %}
{%- endfor -%}
{% else %}
    {{ 'None'|trans }}
{% endif %}